{
    "manifest_version": 3,
    "name":"Summarizer",
    "version": "1.0",
    "description": "A Chrome extension that summarizes web pages.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action":{
        "default_icon":{
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

"content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": ["sidepanel.html", "sidepanel.js"],
            "matches": ["<all_urls>"]
        }
    ]


}